{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "strict": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "src/**/*.spec.ts", "src/**/*.js", "node_modules"]
}
